<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.demo.manage.SelfFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/login"
            android:layout_margin="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.demo.manage.widgets.CircleImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                app:border_width="1dp"
                app:border_color="@color/gray"
                android:src="@drawable/man"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/username"
                    android:textSize="20sp"
                    android:text="点击登录/注册"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/userhint"
                    android:text="登录更精彩"/>
            </LinearLayout>


        </RelativeLayout>

        <com.demo.manage.MyGridView
            android:id="@+id/mineSelfview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="90dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"></com.demo.manage.MyGridView>
    </LinearLayout>

    <com.demo.manage.MyListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/list"
        android:background="@color/white"></com.demo.manage.MyListView>
    <com.demo.manage.MyListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/list_two"
        android:background="@color/white"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:id="@+id/quit"
        android:visibility="gone"
        android:background="@drawable/selector_red_corners_button"
        android:text="退出登录"/>
</LinearLayout>
